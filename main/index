        "HappyCustomer88: \"I've been using Goship for years, and they continue to exceed my expectations. Fast, efficient, and reliable. Keep up the great work!\""
        ];

        function scrollComments() {
        comments.appendChild(comments.firstElementChild);
        }

        function addComment(text) {
        var comment = document.createElement('div');
        comment.classList.add('comment');

        var authorIndex = text.indexOf(":");
        var author = document.createElement('span');
        author.classList.add('author');
        author.textContent = text.slice(0, authorIndex + 1);

        var content = document.createElement('span');
        content.textContent = text.slice(authorIndex + 2);

        comment.appendChild(author);
        comment.appendChild(content);
        comments.appendChild(comment);
        }

        for (var i = 0; i < sampleComments.length; i++) {
        addComment(sampleComments[i]);
        }

        setInterval(scrollComments, scrollInterval);
    </script>
</body>
</html>
